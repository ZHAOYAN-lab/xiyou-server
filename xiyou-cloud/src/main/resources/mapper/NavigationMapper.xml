<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ifengniao.server.xiyoucloud.mapper.NavigationMapper">

    <!-- 注意：这里不需要写类型，MyBatis 会自动识别 Long -->
    <select id="getProductAreaGeom" resultType="map">
        SELECT
            area_id,
            ST_AsText(area_content) AS wkt
        FROM xy_product_area
        WHERE area_id = #{areaId}
    </select>

    <select id="getMapWalkable" resultType="map">
        SELECT x, y, walkable
        FROM xy_map_grid
        WHERE map_id = #{mapId}
    </select>

</mapper>
